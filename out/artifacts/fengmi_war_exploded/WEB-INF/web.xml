<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

        <filter>
            <filter-name>LoginFilter</filter-name>
            <filter-class>com.dl.code.filter.LoginFilter</filter-class>
        </filter>
        <filter-mapping>
            <filter-name>LoginFilter</filter-name>
            <url-pattern>/after/add_goods.jsp</url-pattern>
            <url-pattern>/after/error.jsp</url-pattern>
            <url-pattern>/after/goods.jsp</url-pattern>
            <url-pattern>/after/goodsType.jsp</url-pattern>
            <url-pattern>/after/order.jsp</url-pattern>
            <url-pattern>/after/user.jsp</url-pattern>
            <url-pattern>/before/success.html</url-pattern>
            <url-pattern>/before/index.html</url-pattern>
            <url-pattern>/index.jsp</url-pattern>
        </filter-mapping>
</web-app>